@model SotreSite.Models.UserModel
@{
    ViewBag.Title = "Members";
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Members of Story Site</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="users" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>Email Verification</th>
                            <th>Phone Verification</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.GetUsers())
                        {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.EmailConfirmed</td>
                            <td>@user.PhoneNumberConfirmed</td>
                        </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>Email Verification</th>
                            <th>Phone Verification</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->

@section scripts
{
    <script>
      $(function () {
        $('#users').DataTable({
          'paging'      : true,
          'lengthChange': false,
          'searching'   : true,
          'ordering'    : true,
          'info'        : true,
          'autoWidth'   : false
        })
      })
    </script>    
}


