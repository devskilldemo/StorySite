
@{
    ViewBag.Title = "Developers";
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Developers of Story Site</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="developers" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Photo</th>
                            <th>Name</th>
                            <th>Role</th>
                            <th>Facebook ID</th>
                            <th>Github ID</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var developer in Model.GetDevelopers())
                        {
                            <tr>
                                <td><img style="width:80px" src="@developer.PhotoUrl" /></td>
                                <td>@developer.Name</td>
                                <td>@developer.Role</td>
                                <td>@developer.FacebookID</td>
                                <td>@developer.GitHubID</td>
                                <td>
                                    <a href="/Admin/Developers/Edit/@developer.ID" class="btn btn-info btn-sm edit" ><i class="fa fa-fw  fa-edit"></i></a>
                                    <button type="button" class="btn btn-danger btn-sm delete" data="@developer.ID"><i class="fa fa-fw fa-trash-o"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Photo</th>
                            <th>Name</th>
                            <th>Role</th>
                            <th>Facebook ID</th>
                            <th>Github ID</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->

@section scripts
{
    <script>
      $(function () {
        $('#developers').DataTable({
          'paging'      : true,
          'lengthChange': false,
          'searching'   : true,
          'ordering'    : true,
          'info'        : true,
          'autoWidth'   : false
          })

        $("#developers tbody").on("click", ".delete", function () {
            var id = $(this).attr("data");

            $.post("/Admin/Developers/Delete", { 'id': id }).done(function (data) {
                if (data == "success")
                    location.reload();
            });
            
        });


      })

    </script>
}





