@model SotreSite.Areas.Admin.Models.DeveloperModel
@{
    ViewBag.Title = "Add Developer";
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Quick Example</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" action="/Admin/Developers/Add"  method="post" enctype='multipart/form-data'>
                <div class="box-body">
                    <div class="form-group">
                        <label for="name">Name</label>
                        @Html.TextBoxFor(model => model.Name, new { @class="form-control" })
                    </div>
                    <div class="form-group">
                        <label for="role">Role</label>
                        @Html.TextBoxFor(model => model.Role, new { @class="form-control" })
                    </div>
                    <div class="form-group">
                        <label for="photo">Photo File</label>
                        @Html.TextBoxFor(model => model.PhotoFile, new { type = "file" })
                        <p class="help-block">Upload 1MB File Max.</p>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        <!-- /.box -->
    </div>
    <!--/.col (left) -->
</div>

